{
    "version": "1.0.0",
    "language": "fr",
    "output_directory": "output",
    "validation": {
        "strict_mode": false,
        "auto_correct": true,
        "validate_dates": false,
        "validate_amounts": false,
        "validate_emails": false,
        "validate_phones": false,
        "validate_addresses": false
    },
    "document": {
        "default_format": "pdf",
        "auto_save": false,
        "backup_enabled": false,
        "max_recent_documents": 5
    },
    "app": {
        "company_name": "Vynal Docs Automator",
        "theme": "light",
        "max_recent_activities": 20,
        "auto_update": false,
        "debug_mode": false
    },
    "auto_fill": {
        "enabled": true,
        "confidence_threshold": 0.5,
        "auto_validate": true,
        "show_preview": false,
        "max_fields": 30,
        "field_mapping": {
            "client_name": ["nom", "name", "client"],
            "client_company": ["company", "société", "entreprise"],
            "client_email": ["email", "mail", "courriel"],
            "client_phone": ["phone", "téléphone", "tel"],
            "client_address": ["address", "adresse"],
            "document_date": ["date", "date_document"],
            "document_number": ["number", "numéro", "reference"],
            "amount": ["montant", "amount", "prix", "total"],
            "vat_amount": ["tva", "vat", "taxe"],
            "due_date": ["due", "échéance", "date_échéance"]
        }
    }
} 